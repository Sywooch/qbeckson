{
    "name": "yiisoft/yii2-app-basic",
    "description": "Yii 2 Basic Project Template",
    "keywords": ["yii2", "framework", "basic", "project template"],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii2"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.5",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "developeruz/yii2-db-rbac": "*",
        "yiisoft/yii2-jui": "^2.0",
        "kartik-v/yii2-grid": "@dev",
        "kartik-v/yii2-mpdf": "*",
        "mpdf/mpdf": "@dev",
        "kartik-v/yii2-widget-datepicker": "@dev",
        "kartik-v/yii2-widget-activeform": "@dev",
        "kartik-v/yii2-datecontrol": "dev-master",
        "kartik-v/yii2-field-range": "*",
        "wbraganca/yii2-dynamicform": "dev-master",
        "kartik-v/yii2-widget-touchspin": "*",
        "kartik-v/yii2-widget-spinner": "@dev",
        "kartik-v/yii2-widgets": "*",
        "phpoffice/phpword": "^0.13.0",
        "kartik-v/yii2-dynagrid": "@dev",
        "kartik-v/yii2-export": "@dev",
        "kartik-v/yii2-dialog": "@dev",
        "kartik-v/yii2-krajee-base": "dev-master",
        "kartik-v/yii2-helpers": "dev-master",
        "kartik-v/yii2-slider": "dev-master",
        "phpoffice/phpexcel": "^1.8",
        "arius/number-formatter": "1.*"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
